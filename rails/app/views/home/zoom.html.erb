<div class="row">
  <%= form_tag('/tags?submit=true', class: "col s12", method: :get) do -%>

    <div class="section no-pad-bot" id="index-banner">
      <div class="container">
        <br><br>
        <h1 class="header center red-text text-lighten-1">Zoom In</h1>
        <div class="row center">
          <h5 class="header col s12 light">Select Images an press Summary when your done</h5>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="">

      <% @images.each do |bucket| %>
        <div class="row">
          <div>
          <% bucket.each do |image| %>
            <div class="col s12 m3">
 
              <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                  <img class="activator" src="<%= Backend::IMAGES_URL + image["filename"] %>" height="200" >
                </div>
                <div class="card-content">
                  <p><a href="/zoom-in?img_id=<%= image["_id"].first %>&last_image=<%= image["filename"] %>">Liked click here ?</a></p>
                </div>
         
              </div>
              <%= hidden_field_tag 'image_path_', (Backend::IMAGES_URL + image["filename"]) %>
              <%= hidden_field_tag 'image_id_', image["_id"] %>

            </div>
          <% end %>

          </div>

        </div>
       
      <% end %>
      </div>

    </div>

    <div class="container">
      <div class="section">
        <div class="row">
          <div class="col s12 m5"></div>
          <div class="col s12 m2">
            <button class="btn red lighten-1" type="submit" name="boton" value="zoomed" >Summary
              <i class="material-icons right">Continue</i>
            </button>

          </div>
          <div class="col s12 m5"></div>
        </div>
        <div class="row">
          <br/>
          <a href="/tags">back</a>
        </div>
      </div>
    </div>

  <% end -%>
</div>
