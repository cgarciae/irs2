<div class="row">
  <%= form_tag('/', class: "col s12", method: :get) do -%>

    <div class="section no-pad-bot" id="index-banner">
      <div class="container">
        <br><br>
        <div class="row center">
          <h5 class="header col s12 light">This is the summary of customer settings that fits the branding</h5>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="">

        <div class="row">
          <div>
            <div class="col s12 m2"></div>
            <div class="col s12 m8">


              <div class="card">
     
                  <div class="card-image">
                      <img class="activator" src="<%= Backend::IMAGES_URL + session[:zoom].try(:[], :last_image) %>">
                  </div>
                  <div class="card-content">

                    <% if session[:zoom].try(:[], :last_image_prob).present? %>
                      <div class="percentageContainer" data-prob=<%= session[:zoom].try(:[], :last_image_prob).to_f.round(2) %>>
                          <span class="percentageValue"></span><span class="prob"><%= session[:zoom].try(:[], :last_image_prob).to_f.round(2) %>%</span>
                      </div>
                    <% end %>
                  </div>

                <div class="card-action">
                  <% Tags.all.sample(15).each do |tag| %> 
                    <div class="chip"><%= tag %></div>
                  <% end %>
                </div>
         
              </div>

            </div>
            <div class="col s12 m2"></div>
          </div>

        </div>

        <div class="row">
          <div class="col s12 m2"></div>

          <div class="col s12 m3">
            <button class="btn red lighten-1" type="submit" name="boton" value="zoomed" >Recommend Designer
              <i class="material-icons right">Recommend Designer</i>
            </button>
          </div>
          <div class="col s12 m2"></div>
          <div class="col s12 m3">
            <button class="btn red lighten-1" type="submit" name="boton" value="zoomed" >Generate Image
              <i class="material-icons right">Generate Image</i>
            </button>
          </div>
          <div class="col s12 m2"></div>

        </div>

      </div>

    </div>

    <div class="container">
      <div class="section">
        <div class="row">
          <div class="col s12 m5"></div>
          <div class="col s12 m2">
            <button class="btn red lighten-1" type="submit" name="boton" value="zoomed" >Start over
              <i class="material-icons right">Continue</i>
            </button>

          </div>
          <div class="col s12 m5"></div>
        </div>
        <div class="row">
          <br/>
          <a href="/">volver</a>
        </div>
      </div>
    </div>
    <%= javascript_tag do %>
      function setPercentage(value, container, element) {
          var newWidth = parseInt(container.width() * value / 100.0);
          element.animate({
             width: newWidth + "px"
          }, 500);
      }

      var bars = $(".percentageContainer");
      bars.each(function() {
        var percentageValue = parseFloat(this.getAttribute("data-prob"));
        var percentage = this.getElementsByClassName('percentageValue')[0];
        setPercentage(percentageValue, $(this), $(percentage));
      });

    <% end %>
  <% end -%>
</div>
